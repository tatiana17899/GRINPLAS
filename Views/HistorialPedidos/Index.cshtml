@model List<GRINPLAS.Models.Pedido>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Mi Historial de Pedidos";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var token = Xsrf.GetAndStoreTokens(Context).RequestToken;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
    

        .container-fluid {
            padding: 3rem 2rem;
            max-width: 1600px;
            margin: 0 auto;
        }


        .table {
            width: 100%;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table thead {
            background-color: #70A67F;
            color: white;
        }

        .table thead th {
            padding: 1.25rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            font-size: 0.9rem;
            border-bottom: 2px solid #6dbe88;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f1f3f5;
        }

        .table tbody td {
            padding: 1.25rem;
            vertical-align: middle;
            border-top: 1px solid #e9ecef;
            font-size: 0.95rem;
            text-align: center;
        }

        .btn-ver, .btn-editar, .btn-cancelar {
            color: #1a9441;
            border: none;
            background: none;
            cursor: pointer;
            font-size: 1.3rem;
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .btn-ver:hover {
            transform: scale(1.15);
            color: #1a9441;
        }

        .btn-editar:hover {
            transform: scale(1.15);
            color: #0d6efd;
        }

        .btn-cancelar {
            color: #dc3545;
        }

        .btn-cancelar:hover {
            color: #b02a37;
            transform: scale(1.15);
        }

        .status-pendiente {
            background-color: #fff3cd;
            color: #856404;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.85rem;
        }

        /* Modales */
        .modal {
            display: none;
            position: fixed;
            z-index: 1050;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
            overflow-y: auto;
            padding: 20px 0;
            animation: fadeIn 0.3s ease;
        }

        
        .modal-content {
            background-color: #fff;
            margin: auto;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transform: translateY(0);
            transition: transform 0.3s ease;
            max-width: 600px;
            width: 90%;
            max-height: 70vh; 
            overflow-y: auto;
        }

        .modal-sm {
            max-width: 450px;
            max-height: 60vh; 
            overflow-y: auto;
        }

        .modal-header {
            padding: 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f9fa;
        }

        .modal-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 0 auto;
        display: block;
        }

        .modal-title {
            margin: 0;
            font-size: 1.3rem;
            color: #333;
            font-weight: 600;
        }

        .btn-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #6c757d;
            cursor: pointer;
            transition: color 0.2s;
        }

        .btn-close:hover {
            color: #333;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            padding: 15px 20px;
            border-top: 1px solid #eee;
            display: flex;
            justify-content: flex-end;
            background-color: #f8f9fa;
        }

        .img-documento {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 2px 10px rgba(58, 59, 59, 0.877);
            display: block;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #495057;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ced4da;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .form-control:focus {
            border-color: #70A67F;
            box-shadow: 0 0 0 0.2rem rgba(112, 166, 127, 0.25);
            outline: none;
        }

        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }

        .alert {
            padding: 12px 15px;
            border-radius: 8px;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn i {
            font-size: 0.9em;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

        .btn-outline-secondary {
            background-color: transparent;
            color: #6c757d;
            border: 1px solid #6c757d;
        }

        .btn-primary {
            background-color: #70A67F;
            color: white;
            border: none;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn:hover {
            filter: brightness(90%);
            transform: translateY(-1px);
        }

        .btn:active {
            transform: translateY(0);
        }

        .cancel-icon {
            font-size: 3rem;
            color: #dc3545;
            margin-bottom: 15px;
        }

        .container.mt-5 {
            margin-top: 2rem !important;
        }

        .text-center.mb-5 {
            margin-bottom: 3rem !important;
        }

        .d-inline-block.bg-white.p-3 {
            padding: 20px 40px !important;
            height: 150px;
            border-radius: 97px;
            width: fit-content;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .fw-bold {
            font-weight: 700 !important;
            margin-top: 15px;
            font-size: 2.2rem;
        }

        .text-white {
            color: white !important;
        }
    </style>
</head>
<body>

    <div class="container mt-5"></div>
    <div class="text-center mb-5" style="margin-top: -150px; z-index: 100; position: relative;">
        <div class="d-inline-block bg-white p-3" style="padding: 20px 40px; height: 150px; border-radius: 97px; width: fit-content;">
            <h1 class="fw-bold" style="color: #0E8930; margin-top: 15px; margin-left: 15px; margin-right: 15px;">
                <span style="color: #7DAE8A;">MI HISTORIAL</span>  DE PEDIDOS
            </h1>
        </div>
    </div>


        <div style="margin: 0 auto; max-width: 1200px;">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Dirección</th>
                         @* <th>Boleta</th> *@ <!-- Boleta -->
                        <th>Comprobante</th>
                        <th>Fecha de Emisión</th>
                        <th>Fecha de Entrega</th>
                        <th>Estado</th>
                        <th>Cancelar</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pedido in Model)
                    {
                        <tr>
                            <td>@pedido.Cliente?.NombreEmpresa</td>
                            <td>@pedido.Direccion</td>
                            @* 
                            <td>
                                @if (!string.IsNullOrEmpty(pedido.BoletaEmitida))
                                {
                                    <button class="btn-ver" onclick="mostrarImagen('@pedido.BoletaEmitida')" title="Ver Boleta">
                                        <i class="fas fa-file-invoice"></i>
                                    </button>
                                }
                                else { <span>--</span> }
                            </td>
                            *@ <!--  Boleta -->
                            
                            
                            <td>
                                @if (!string.IsNullOrEmpty(pedido.Pago))
                                {
                                    <button class="btn-ver" onclick="mostrarImagen('@pedido.Pago')" title="Ver Comprobante">
                                        <i class="fas fa-file-invoice-dollar"></i>
                                    </button>
                                }
                                else
                                {
                                    <span>--</span>
                                }
                            </td>


                            <td>@pedido.FechaEmision.ToString("dd/MM/yyyy")</td>
                            <td>@pedido.FechaEntrega?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (pedido.Status == "Pendiente")
                                {
                                    <span class="status-pendiente">@pedido.Status</span>
                                    <button class="btn-editar" onclick="abrirEditarDireccion(@pedido.PedidoId)" title="Editar Dirección">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                }
                                else
                                {
                                    <span>@pedido.Status</span>
                                }
                            </td>
                            <td>
                                @if (pedido.Status == "Pendiente")
                                {
                                    <button class="btn-cancelar" onclick="abrirCancelarPedido(@pedido.PedidoId)" title="Cancelar Pedido">
                                        <i class="fas fa-times-circle"></i>
                                    </button>
                                }
                                else { <span>--</span> }
                            </td>
                            <td>S/ @pedido.Total.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-warning text-center mt-3">
                        <i class="fas fa-exclamation-circle"></i> No tienes pedidos registrados.
                    </div>
                }
        </div>
    </div>

    <!-- Modales  -->
    <div id="modalImagen" class="modal" onclick="cerrarModal('modalImagen')">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Documento del Pedido</h3>
                <button class="btn-close" onclick="cerrarModal('modalImagen')">&times;</button>
            </div>
            <div class="modal-body">
                <img id="imgModal" src="" alt="Documento" class="img-documento">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="cerrarModal('modalImagen')">
                    <i class="fas fa-times"></i> Cerrar
                </button>
                <button class="btn btn-primary" onclick="descargarImagen()">
                    <i class="fas fa-download"></i> Descargar
                </button>
            </div>
        </div>
    </div>

    <div id="modalEditar" class="modal" onclick="cerrarModal('modalEditar')">
        <div class="modal-content" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h3 class="modal-title">Actualizar Dirección de Entrega</h3>
                <button class="btn-close" onclick="cerrarModal('modalEditar')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="nuevaDireccion" class="form-label">Nueva dirección de recojo:</label>
                    <input type="text" id="nuevaDireccion" class="form-control" placeholder="Ej: Av. Los Jardines 123, Surco">
                    <div class="form-text">
                        <i class="fas fa-info-circle"></i> Si modificas la dirección el mismo día de entrega, podría aplicarse una penalización.
                    </div>
                </div>
                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle"></i> Por favor verifica que la dirección sea correcta y accesible para nuestros repartidores.
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" onclick="cerrarModal('modalEditar')">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </button>
                <button class="btn btn-primary" onclick="confirmarDireccion()">
                    <i class="fas fa-check"></i> Confirmar Cambios
                </button>
            </div>
        </div>
    </div>

    <div id="modalCancelar" class="modal" onclick="cerrarModal('modalCancelar')">
        <div class="modal-content modal-sm" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h3 class="modal-title">Confirmar Cancelación</h3>
                <button class="btn-close" onclick="cerrarModal('modalCancelar')">&times;</button>
            </div>
            <div class="modal-body text-center">
                <div class="cancel-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <h4>¿Estás seguro de cancelar este pedido?</h4>
                <p>Esta acción no puede revertirse. Si tienes dudas, puedes contactar a nuestro soporte.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button class="btn btn-outline-secondary" onclick="cerrarModal('modalCancelar')">
                    <i class="fas fa-arrow-left"></i> Volver
                </button>
                <button class="btn btn-danger" onclick="confirmarCancelacion()">
                    <i class="fas fa-trash-alt"></i> Confirmar Cancelación
                </button>
            </div>
        </div>
    </div>

    <script>
        let pedidoIdSeleccionado = 0;

        function mostrarImagen(ruta) {
            const imgModal = document.getElementById('imgModal');
            imgModal.src = ruta; 

            document.getElementById('modalImagen').style.display = 'flex';
        }

        function abrirEditarDireccion(id) {
            pedidoIdSeleccionado = id;
            document.getElementById('modalEditar').style.display = 'flex';
            
            document.getElementById('nuevaDireccion').value = '';
        }

        function abrirCancelarPedido(id) {
            pedidoIdSeleccionado = id;
            document.getElementById('modalCancelar').style.display = 'flex';
        }

        function cerrarModal(id) {
            document.getElementById(id).style.display = 'none';
        }

        function descargarImagen() {
            const imageUrl = document.getElementById('imgModal').src;
            const link = document.createElement('a');
            link.href = imageUrl;
            link.download = 'documento-pedido-' + new Date().toISOString().slice(0, 10);
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function confirmarDireccion() {
        const nuevaDireccion = document.getElementById('nuevaDireccion').value;
        if (nuevaDireccion.trim() === "") {
            Swal.fire({
                icon: 'warning',
                title: 'Campo requerido',
                text: 'Debes ingresar una dirección válida',
                confirmButtonColor: '#70A67F'
            });
            return;
        }

        // Enviar la nueva dirección 
        fetch('/Pedidos/ActualizarDireccion', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `pedidoId=${pedidoIdSeleccionado}&nuevaDireccion=${encodeURIComponent(nuevaDireccion)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Dirección actualizada',
                    text: `La dirección del pedido #${pedidoIdSeleccionado} ha sido modificada correctamente`,
                    confirmButtonColor: '#70A67F',
                    timer: 3000
                }).then(() => {
                    window.location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.error || 'No se pudo actualizar la dirección',
                    confirmButtonColor: '#d33'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Ocurrió un error al intentar actualizar la dirección',
                confirmButtonColor: '#d33'
            });
        });

        cerrarModal('modalEditar');


            Swal.fire({
                position: 'center',
                icon: 'success',
                title: 'Dirección actualizada',
                text: `La dirección del pedido #${pedidoIdSeleccionado} ha sido modificada correctamente`,
                showConfirmButton: true,
                confirmButtonColor: '#70A67F',
                timer: 3000
            }).then(() => {
                //
            });
        }

        function confirmarCancelacion() {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "Esta acción cancelará permanentemente tu pedido",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Sí, cancelar',
            cancelButtonText: 'No, volver',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Enviar la solicitud para cancelar el pedido
                fetch('/Pedidos/CancelarPedido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `pedidoId=${pedidoIdSeleccionado}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Pedido cancelado',
                            text: `El pedido #${pedidoIdSeleccionado} ha sido cancelado correctamente`,
                            confirmButtonColor: '#70A67F',
                            timer: 3000
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.error || 'No se pudo cancelar el pedido',
                            confirmButtonColor: '#d33'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Ocurrió un error al intentar cancelar el pedido',
                        confirmButtonColor: '#d33'
                    });
                });
            }
        });
    }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    $(document).ready(function () {
        $('.table').DataTable({
            pageLength: 4, 
            lengthChange: false, 
            info: false,
            language: {
                lengthMenu: "Mostrar _MENU_ registros por página",
                zeroRecords: "No se encontraron resultados",
                search: "Buscar:",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }
        });
    });

</script>
</body>
</html>