@model List<GRINPLAS.Models.Cliente>
@{
    ViewData["Title"] = "Historial de Clientes";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml"; 
}

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css"
    />
    <link rel="stylesheet" href="styleCliente.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />


  </head> 


  <body>
    <div class="d-flex flex-column">
      <div class="d-flex flex-column">
       
          <!-- Main Content -->
          <div class="content" id="content">
            <div class="container" style="padding: 40px">
              <div class="text-sm mb-4">
                <a href="#" style="color: #7f7f7f; text-decoration: none"
                  >Inicio</a
                >
                <span class="mx-2">/</span>
                <span style="color: #09c33d; font-weight: bold">Clientes</span>
              </div>
              <h1 class="fs-2 mb-4">Historial de Clientes</h1>
              <div class="rounded-lg overflow-hidden">
                <table id="clientTable" class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Nombre Empresa</th>
                            <th scope="col">Tipo de Documento</th>
                            <th scope="col">Número de Documento</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Fecha de Creación</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model) 
                        {
                            <tr>
                                <td>@cliente.NombreEmpresa</td>
                                <td>@cliente.TipDoc</td>
                                <td>@cliente.NumDoc</td>
                                <td>@cliente.Telefono</td>
                                <td>@cliente.FecCre.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
    $(document).ready(function () {
        $('#clientTable').DataTable({
            "pageLength": 5,           
            "lengthChange": false,     
            "language": {
                "paginate": {
                    "previous": "Anterior",
                    "next": "Siguiente"
                },
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay datos disponibles",
                "emptyTable": "No hay clientes registrados",
                "search": "Buscar:"
            }
        });
    });
</script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
  </body>
</html>
